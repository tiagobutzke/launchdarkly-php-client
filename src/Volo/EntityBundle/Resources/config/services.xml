<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="volo_entity.normalizer.class">Symfony\Component\Serializer\Normalizer\CustomNormalizer</parameter>
        <parameter key="volo_entity.service.entity_generator.class">Volo\EntityBundle\Service\EntityGenerator</parameter>
        <parameter key="volo_entity.service.entity_normalizer.class">Volo\EntityBundle\Service\EntityNormalizer</parameter>
    </parameters>

    <services>
        <service id="volo_entity.normalizer" class="%volo_entity.normalizer.class%">
            <tag name="serializer.normalizer" />
        </service>

        <service id="volo_entity.service.entity_generator" class="%volo_entity.service.entity_generator.class%">
            <argument type="service" id="serializer"/>
        </service>

        <service id="volo_entity.service.entity_normalizer" class="%volo_entity.service.entity_normalizer.class%">
            <argument type="service" id="serializer"/>
        </service>
    </services>
</container>
