{% extends 'core.html.twig' %}

{% block title %}Title page{% endblock %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}

    <div class="container">

        <div class="row">
            <form action="{{ path('login_check') }}" method="post" role="form">

                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" />
                </div>

                <input type="hidden" name="_target_path" value="{{ path('home') }}" class="btn btn-primary" />

                <button type="submit">login</button>
            </form>

        </div>

    </div>
{% endblock %}



