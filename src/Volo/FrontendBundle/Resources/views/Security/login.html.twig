{% block content %}
    <h4 class="modal__h4 text-center">{% trans %}Login{% endtrans %}</h4>
    <div class="modal__padding-left-right">

        {% if error %}
            <div class="modal-error-message">
                <span class="icon-attention"></span> {{ error.messageKey|trans(error.messageData) }}
            </div>
        {% endif %}

        <form class="login-form" action="{{ path('login_check') }}" method="post" role="form" novalidate>
            <div class="form-group">
                <input type="text" class="form-control" id="username" name="_username"
                       value="{{ last_username }}" required="true" placeholder="{% trans %}Name{% endtrans %}"
                       data-toggle="tooltip" title="{% trans %}validations.error.login.username{% endtrans %}"/>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="_password" placeholder="{% trans %}Password{% endtrans %}"
                       data-toggle="tooltip" title="{% trans %}validations.error.login.password{% endtrans %}"/>
            </div>
            <button class="button button--full-width modal__padding-left-right" type="submit">{% trans %}Login{% endtrans %}</button>
        </form>

        <div class="text-center login-registration-link">{% trans %}Don't have an account?{% endtrans %} <a class="register-link">{% trans %}Signup here{% endtrans %}</a></div>
    </div>
{% endblock %}
