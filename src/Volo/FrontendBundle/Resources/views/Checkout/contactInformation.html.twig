{% extends 'VoloFrontendBundle:Checkout:base.html.twig' %}

{% block delivery_information %}
    <h3 class="checkout__title checkout__title--stacked">1. {% trans %}Delivery details{% endtrans %}
        <span class="checkout__subtitle__edit">
        <i class="icon-pencil"></i>
        <a href="{{ path('checkout_delivery_information', {vendorCode: vendor.code}) }}">{% trans %}Edit{% endtrans %}</a>
    </span>
    </h3>
    {% include('VoloFrontendBundle:Checkout/Partial:delivery_information_edit.html.twig') %}
{% endblock %}

{% block contact_information %}
    <h3 class="checkout__title">2. {% trans %}Contact info{% endtrans %}</h3>

    {% for message in errorMessages %}
        <div class="error">
            {{ message }}
        </div>
    {% endfor %}

    {% include('VoloFrontendBundle:Checkout/Partial:contact_information_form.html.twig') with {action: path('checkout_contact_information', {vendorCode: vendor.code})} %}
{% endblock %}

{% block payment %}
    <h3 class="checkout__title checkout__title--step">3. {% trans %}Payment{% endtrans %}</h3>
{% endblock %}
