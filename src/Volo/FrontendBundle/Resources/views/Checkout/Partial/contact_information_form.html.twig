<h3 class="checkout__title">2. {% trans %}Contact info{% endtrans %}</h3>
<form action="{{ path('checkout_contact_information', {vendorCode: vendor.code}) }}" id="checkout_form" method="post" role="form">
    <div class="checkout__item">
        <div class="form-group">
            <input type="text" class="form-control" id="first_name" name="customer[first_name]"
                   value="{{ customer.first_name|default('') }}" required="true" placeholder="{% trans %}First Name{% endtrans %}">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="last_name" name="customer[last_name]"
                   value="{{ customer.last_name|default('') }}" required="true" placeholder="{% trans %}Last Name{% endtrans %}">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="email" name="customer[email]" value="{{ customer.email|default('') }}"
                   required="true" placeholder="{% trans %}Email Address{% endtrans %}">
        </div>
        <div class="form-group">
            <input type="tel" class="form-control" id="mobile_country_code" name="customer[mobile_country_code]" placeholder="{% trans %}Telephone Country Code{% endtrans %}">
        </div>
        <div class="form-group">
            <input type="tel" class="form-control" id="mobile_number" name="customer[mobile_number]" value="{{ customer.mobile_number|default('') }}" required="true" placeholder="{% trans %}Mobile Number{% endtrans %}">
        </div>
        <button class="button pull-right">{% trans %}Continue{% endtrans %}</button>
    </div>
</form>
