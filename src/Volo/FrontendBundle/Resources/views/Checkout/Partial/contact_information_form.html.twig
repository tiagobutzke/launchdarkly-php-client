<form action="{{ action }}" id="contact_information_form" method="post" role="form">
    <div class="checkout__item checkout__item--step">
        <div class="form-group form-group--two_col1--xs-full">
            <input type="text" class="form-control" id="first_name" name="customer[first_name]"
                   value="{{ customer.first_name|default('') }}" required="true" placeholder="{% trans %}First Name{% endtrans %}">
        </div>
        <div class="form-group form-group--two_col2--xs-full">
            <input type="text" class="form-control" id="last_name" name="customer[last_name]"
                   value="{{ customer.last_name|default('') }}" required="true" placeholder="{% trans %}Last Name{% endtrans %}">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="email" name="customer[email]" value="{{ customer.email|default('') }}"
                   required="true" placeholder="{% trans %}Email Address{% endtrans %}">
        </div>
        <div class="form-group">
            <input type="tel" class="form-control" id="mobile_number" name="customer[mobile_number]" value="{{ customer.mobile_country_code|default('') }}{{ customer.mobile_number|default('') }}" required="true" placeholder="{% trans %}Mobile Number{% endtrans %}">
        </div>
        <button class="button">{% trans %}Continue{% endtrans %}</button>
    </div>
</form>
