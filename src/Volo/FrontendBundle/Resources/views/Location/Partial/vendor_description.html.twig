{% block vendor_description %}
    <a href="{{ path('vendor', {code: vendor.code, urlKey: vendor.urlKey}) }}">
        <div class="restaurants__item">
            <div class="restaurants__item__wrapper">
                <div class="restaurants__item__image-wrapper">
                    <div class="restaurants__item__preorder">
                        <i class="restaurants__item__preorder-icon icon-preorder"></i>
                        <span class="restaurants__item__preorder-label">{% trans %}vendor_closed_preorder_available{% endtrans %}</span>
                    </div>
                    {% set imageUrl = asset(vendor.code  ~ '-listing.jpg', 'cdn_s3') %}
                    <div class="b-lazy restaurants__item__image aspect-ratio-100-52"
                         src="{{ blazy_placeholder }}"
                         data-src="{{ thumbor(imageUrl, '500' )}}|{{ thumbor(imageUrl, '500_retina' )}}">
                    </div>
                </div>
                <h3 class="restaurants__item__name">
                        {{ vendor.name }}
                </h3>
                <h4 class="restaurants__item__description">{{ vendor.description }}</h4>
                <div class="restaurants__item__time">
                    <i class="icon-clock-o"></i>
                    {% set availableIn = date(vendor.metadata.availableIn) %}
                    {% if (availableIn|date('d-m-Y') == 'now'|date('d-m-Y')) %}
                        {% trans with {'%time%': availableIn|formatTime} %}restaurant.open_at_time{% endtrans %}
                    {% else %}
                        {% trans with {'%time%': availableIn|formatTime, '%day%': availableIn|localisedDay} %}
                        restaurant.open_at_day_time
                        {% endtrans %}
                    {% endif %}
                </div>
            </div>
        </div>
    </a>
{% endblock %}
