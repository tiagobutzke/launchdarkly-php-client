<img class="b-lazy {{ type }}-banner"
     src="{{ blazy_placeholder }}"
        {% for transformer in get_thumbor_configuration() %}
            {% set imageName = vendorCode ~ '-' ~ type ~ '.jpg' %}
            {% set normalImage = thumbor(asset(imageName, 'cdn_s3'), transformer.normal.key) %}
            {# @TODO: check if the retina key exists #}
            {% set retinaImage = thumbor(asset(imageName, 'cdn_s3'), transformer.retina.key) %}
            {% set dataSourceAttribute =  'default' in transformer.normal.key ?  'data-src' : 'data-src-' ~ transformer.normal.key %}

            {{ dataSourceAttribute }}="{{ normalImage }}|{{ retinaImage }}"
        {% endfor %}
     alt=""/>
