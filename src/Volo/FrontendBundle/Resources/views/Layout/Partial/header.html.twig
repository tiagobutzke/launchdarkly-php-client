{% block header %}
    <header class="header {% block headerClass %}{% endblock headerClass %}">
        <div class="header__wrapper">
            <div class="header__account">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="#" class="header__account__open">{{ app.security.token.attributes.customer.firstName }}<i class="icon-down-open-mini"></i></a>
                    <a href="#" class="header__account__login-icon"><i class="icon-profile"></i></a>
                    {#<a href="{{ path('logout') }}">Logout </a>#}
                {% else %}
                    <a href="{{ path('login') }}" class="header__account__login-text">Login</a>
                    <a href="{{ path('login') }}" class="header__account__login-icon"><i class="icon-profile"></i></a>
                {% endif %}
            </div>
            <h1 class="header__logo">
                <a class="header__logo__a" href="{{ path('home') }}">
                    <i class="icon-logo"></i>
                    <span>{% trans %}brand_name{% endtrans %}</span>
                </a>
            </h1>
            <a class="header__cart" href="#">
                <i class="icon-cart"></i>
                <span class="header__cart__products__count"></span>
            </a>
        </div>
        <div class="header__wrapper__bg"></div>
    </header>
{% endblock header %}
