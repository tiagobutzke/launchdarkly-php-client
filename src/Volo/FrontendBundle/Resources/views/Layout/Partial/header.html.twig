{% block header %}
    <header class="header {% block headerClass %}{% endblock headerClass %}">
        <div class="header__wrapper">
            <h1 class="header__logo">
                <a class="header__logo__a" href="{{ path('home') }}">
                    <i class="icon-logo"></i>
                    <span>{% trans %}brand_name{% endtrans %}</span>
                </a>
                <span class="header__logo__restaurant-name"></span>
            </h1>
            <div class="header__account">
                {% if is_customer_authenticated_fully() %}
                    <div class="header__account__dropdown dropdown">
                        <a class="header__account__open" id="dLabel" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ get_authenticated_customer().firstName|escape('html') }}<i class="icon-down-open-mini"></i>
                        </a>
                        <a href="#" class="header__account__login-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="icon-profile"></i></a>
                        <ul class="dropdown-menu arrow" role="menu" aria-labelledby="dLabel">
                            <li>
                                <a href="{{ path('profile_index')}}" class="header_account__dropdown__link">{% trans %}profile{% endtrans %}</a>
                            </li>
                            <li>
                                <a href="{{ path('logout') }}" data-no-turbolink="true" class="header_account__dropdown__link logout-link">{% trans %}logout{% endtrans %}</a>
                            </li>
                        </ul>
                    </div>
                {% else %}
                    <a class="show-login-modal header__account__login-text">{% trans %}link.login{% endtrans %}</a>
                    <a class="show-login-modal header__account__login-icon"><i class="icon-profile"></i></a>
                {% endif %}
            </div>
            {% set cartProductCount = get_default_cart_count(app.session) %}
            <a class="header__cart" data-vendor_id="{{ get_default_cart_vendor_id(app.session) }}">
                <i class="icon-cart"></i>
                {% if cartProductCount > 0 %}
                    <span class="header__cart__products__count">{{ cartProductCount }}</span>
                {% else %}
                    <span class="header__cart__products__count hidden">{{ cartProductCount }}</span>
                {% endif %}
            </a>
            {% for locale in locales %}
                {% if locale != app.request.locale %}
                    <a class="header__language-switch" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale' : locale})) }}">
                        {{ locale|languageName }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
        <div class="header__wrapper__bg"></div>
    </header>
{% endblock header %}
