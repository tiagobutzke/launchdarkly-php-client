{# cart summary extra item #}
<script type="text/template" id="template-cart-summary-extra-item">
+ <%- name %>
</script>

{# cart item #}
<script type="text/template" id="template-cart-item">
    <td class="summary__item__quantity"><%= VOLO.formatNumber(quantity) %></td>
    <td class="summary__item__sign">x</td>
    <td class="summary__item__name">
        <%- name %>
        <span class="summary__extra__items"></span>
    </td>
    <td class="summary__item__price"><%= VOLO.formatCurrency(total_price) %></td>
</script>
{# cart #}
<script type="text/template" id="template-cart">
    <div class="desktop-cart-container">
        <div class="desktop-cart__header">
            <h3 class="desktop-cart__title">{{ 'Delivery Time'|trans }}</h3>
            <div class="desktop-cart__time">
                <div class="desktop-cart__time__field-date">
                    <select id="order-delivery-date">
                        {% set nextThreeOpeningDays = getDeliveryDays(vendor.schedules, 3) %}
                        {% for openingDay in nextThreeOpeningDays %}
                            <option value="{{ openingDay.format("Y-m-d") }}"
                                data-delivery-hours='{{ getClosingHoursRange(vendor.schedules, openingDay)|json_encode|raw }}'>
                                    {{ openingDay|formatOpeningDay }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="desktop-cart__time__field-time">
                    {# @TODO: generate the following select based on the selection above #}
                    <select id="order-delivery-time">
                    </select>
                </div>
            </div>
            <p class="desktop-cart_order__message">
                {{ 'You havenâ€™t added anything to the cart yet! Add items by clicking on a menu item.'|trans }}
            </p>
            <h3 class="desktop-cart__title">{% trans with {'%name%': vendor.name} %}Order summary from{% endtrans %} <span>{{ vendor.name }}</span></h3>
        </div>
        <!-- Actual Cart -->
        {#<h3 class="desktop-cart__title">{{ 'My Order'|trans }}</h3>#}
        <div class="desktop-cart__order">
            <div class="checkout__summary">
                <table class="summary__items desktop-cart__products">
                    {# cart item included here #}
                    <tr>
                        <td colspan="4" class="summary__item__empty"></td>
                    </tr>
                </table>
            </div>
            <div class="desktop-cart__order__subtotal__container">

            </div>
        </div>
        <div class="desktop-cart__footer">
            <div class="desktop-cart__order__subtotal__container"></div>
            <a class="button btn-checkout" href="{{ path('checkout_delivery_information', {vendorCode: vendor.code}) }}">{% trans %}Checkout{% endtrans %}</a>
        </div>
    </div>
 </script>

<script type="text/template" id="template-cart-subtotal">
    <div class="desktop-cart__order__subtotal">
        {{ 'Subtotal'|trans }} <span class="desktop-cart__order__total__price"><%= VOLO.formatCurrency(subtotal_after_discount) %></span>
    </div>
    <div class="desktop-cart__order__delivery">
        {{ 'Delivery'|trans }} <span><%= VOLO.formatCurrency(delivery_fee) %></span>
    </div>
    <div class="desktop-cart__order__total">
        {{ 'Total'|trans }} <span class="desktop-cart__order__total__price"><%= VOLO.formatCurrency(total_value) %></span>
    </div>
 </script>
