{% block modals %}
    <div class="modal-dialogs"><!-- here you can define your modals --></div>

    {% if vendor is defined %}
        <div class="modal fade" id="cartCalculationErrorModal" tabindex="-1" role="dialog"
             aria-labelledby="cartCalculationErrorModalLabel" aria-hidden="true" data-vendor_id="{{ vendor.id }}"
                >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <p>{% trans %}cart.calculation_error_message{% endtrans %}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="button" data-dismiss="modal">
                            {% trans %}button.close{% endtrans %}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="modal fade" id="login-registration-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" id="spinner-wrapper"></div>
            <div class="modal-close-button"></div>
        </div>
    </div>

    <script type="text/template" id="template-login">
        {% render(controller('VoloFrontendBundle:Security:login')) %}
    </script>
    <script type="text/template" id="template-registration">
        {% render(controller('VoloFrontendBundle:Customer:create')) %}
    </script>
    <script type="text/template" id="template-forgot-password">
        {% render(controller('VoloFrontendBundle:Customer:forgotPassword')) %}
    </script>
{% endblock modals %}
