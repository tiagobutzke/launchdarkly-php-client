{% extends 'VoloFrontendBundle:Layout:page.html.twig' %}

{% block title %}{{ element.metaTitle | cms_seo_replace_company }} | {% trans %}brand{% endtrans %}{% endblock %}

{% block head_meta_seo %}
    {% if element.metaRobots %}
        <meta name="robots" content="{{ element.metaRobots }}">
    {% else %}
        <meta name="robots" content="{{ app.request.query | length > 0 ? 'noindex' : 'index' }}, follow">
    {% endif %}

    {% if element.metaDescription %}
        <meta name="description" content="{{ element.metaDescription | cms_seo_replace_company }}">
    {% endif %}
    <link rel="canonical" href="{{ app.request.uriForPath(app.request.pathInfo) }}" />

    {{ element.metaKeywords }}
{% endblock %}

{% block body_class %}static-page{% endblock %}

{% block content_wrapper_class %}menu-bg{% endblock content_wrapper_class %}

{% block content %}
    <div class="hero-banner-wrapper">
        <div class="hero-banner-content">
            {% include 'VoloFrontendBundle:Layout/ImageTag:thumbor_image_background.html.twig' with {'vendorCode' : 'cms', type: 'hero', 'aspectRatioClass' : 'aspect-ratio-40-11'} %}
            <h1 class='hero-banner-content__header'>{{ element.metaTitle }}</h1>
        </div>
    </div>
    <div class="static-page__blocks-wrapper">
        <div class="static-page__blocks">
            <div class="static-page__block">
                {{ element.content|raw }}
            </div>
        </div>
    </div>
{% endblock %}
