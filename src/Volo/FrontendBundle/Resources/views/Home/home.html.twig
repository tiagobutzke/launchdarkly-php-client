{% extends 'VoloFrontendBundle:Layout:page.html.twig' %}

{% block content %}
    <h1 class="text-center">WELCOME TO VOLO</h1>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>Username: {{ app.security.token.attributes.customer.firstName}}</p>
        <a href="{{ path('logout') }}">Logout</a>
    {% else %}
        <a href="{{ path('login') }}">Login</a>
    {% endif %}

    <h2>Cities</h2>
    <ul>
        {% for city in cities %}
            <li><a href="{{ path('city', {'id': city.id}) }}">{{ city.name|e }}</a></li>
        {% endfor %}
    </ul>


{% endblock %}
