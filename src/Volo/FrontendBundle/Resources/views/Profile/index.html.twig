{% extends 'VoloFrontendBundle:Layout:page.html.twig' %}

{% block title %}{% trans %}meta_title.profile{% endtrans %} | {% trans %}brand{% endtrans %}{% endblock %}

{% block content_wrapper_class %}menu-bg{% endblock content_wrapper_class %}

{% block body_class %}profile-page{% endblock %}
{% block gtm_page_type %}User Account{% endblock %}

{% block headerClass %}header--white header-small{% endblock headerClass %}

{% block content %}
    <div class="profile__blocks-wrapper">
        <div class="profile__blocks">
            <div class="profile__block">
                <h3 class="profile__block__title">{% trans %}title.my_profile{% endtrans %}</h3>
                <div class="checkout__step__item-content">
                    {% include 'VoloFrontendBundle:Checkout/Partial:contact_information_form.html.twig' with {action: path('profile_index')} %}
                </div>
            </div>
            <div class="profile__block">
                <h3 class="profile__block__title">{% trans %}title.my_password{% endtrans %}</h3>
                <div class="checkout__step__item-content">
                    {% if errorMessage is not empty %}
                        <div class="form__error-message form__error-message--above-form">{{ errorMessage|trans|raw }}</div>
                    {% endif %}
                    {% if isChangePasswordSuccess == true %}
                        <div class="form__success-message form__success-message--above-form">{% trans %}customer.change_password.success{% endtrans %}</div>
                    {% endif %}
                    <form action="{{ path('profile_index') }}" id="profile-contact-information-form" method="post" role="form" novalidate>
                        <div class="form-group">
                            <input type="password" class="form-control" id="old_password"
                                   name="password_form[old_password]" value="" required="true"
                                   placeholder="{% trans %}form.label.current_password{% endtrans %}"
                                   data-validation-msg="{% trans %}customer.validation.password.not_blank{% endtrans %}">
                            {% if passwordFormErrorMessages.old_password is defined %}
                                {% for message in passwordFormErrorMessages.old_password %}
                                    <span class="form__error-message">{{ message|trans|raw }}</span>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="new_password"
                                   name="password_form[new_password]" value="" required="true"
                                   placeholder="{% trans %}form.label.newpassword{% endtrans %}"
                                   data-validation-msg="{% trans %}customer.validation.password.password_too_short{% endtrans %}">
                            {% if passwordFormErrorMessages.new_password is defined %}
                                {% for message in passwordFormErrorMessages.new_password %}
                                    <span class="form__error-message">{{ message|trans|raw }}</span>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <button class="checkout__step__item-button button pull-right">{% trans %}button.label.continue{% endtrans %}</button>
                    </form>
                </div>
            </div>
            <div class="profile__block profile__block--list">
                <h3 class="profile__block__title">{% trans %}title.my_addresses{% endtrans %}</h3>
                <div class="checkout__step__item-content">
                    {% include 'VoloFrontendBundle:Profile:delivery_information_list.html.twig' %}
                </div>
            </div>
            <div class="profile__block profile__block--list">
                <h3 class="profile__block__title">{% trans %}title.payment_list{% endtrans %}</h3>
                    {% include 'VoloFrontendBundle:Checkout/Partial:payment_list.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
