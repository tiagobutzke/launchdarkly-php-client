{% extends 'core.html.twig' %}

{% block title %}Title page{% endblock %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="flash-error">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <form action="{{ path('customer.create') }}" method="post" role="form">
                {% include 'VoloFrontendBundle:Customer/Partial:customer_registration_form.html.twig' with {'customer' : customer} %}
                <input type="submit" value="Register"/>
            </form>
        </div>
    </div>
{% endblock %}
