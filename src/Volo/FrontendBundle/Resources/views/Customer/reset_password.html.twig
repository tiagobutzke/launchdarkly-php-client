{% block content %}
    <h4 class="modal__h4 text-center">{% trans %}title.reset_password{% endtrans %}</h4>
    <div class="modal__padding-left-right">

        {% if errors %}
            <div class="modal-error-message">
                {% for message in errors %}<div>{{ message }}</div>{% endfor %}
            </div>
        {% endif %}

        <form class="reset-password-form" action="{{ path('customer_reset_password', {code: code}) }}" method="post" role="form" novalidate>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="_password" placeholder="{% trans %}form.placeholder.password{% endtrans %}"
                       data-toggle="tooltip" data-validation-msg="{% trans %}validations.error.login.password{% endtrans %}"/>
            </div>
            <button class="button button--full-width modal__padding-left-right" type="submit">{% trans %}button.submit{% endtrans %}</button>
        </form>
    </div>
{% endblock %}
