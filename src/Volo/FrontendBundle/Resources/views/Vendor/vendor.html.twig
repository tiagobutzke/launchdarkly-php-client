{% block content_wrapper_class %}menu-bg{% endblock content_wrapper_class %}

{% block content %}

<div class="menu-wrapper--screen-md">
    <div class="menu-wrapper">
        <div class="bg-wrapper">
            <div class="bg-wrapper--row">
                <div class="menu-categories">
                    <nav class="menu-categories__nav">
                        <ul>
                            {% for menuCategory in vendor.menus.first.getMenuCategories() %}
                                <li>
                                    <a data-id="{{ menuCategory.getId() }}" href="#menu__category-id-{{ menuCategory.getId() }}">
                                        {{ menuCategory.getName() }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
                <div class="menu">
                    {% for menuCategory in vendor.menus.first.getMenuCategories() %}
                        <h3 class="menu__category-name" id="menu__category-id-{{ menuCategory.getId() }}">{{ menuCategory.getName() }}</h3>
                        {% for product in menuCategory.getProducts() %}
                            <div class="menu__product-wrapper">
                                <div class="menu__product-name">
                                    {{ product.getName() }}
                                </div>
                                <div class="menu__product-price">
                                    <span class="menu__items__product__price">{{ product.getProductVariations().first().getPrice()|number_format }}</span>
                                    <span class="menu__items__product__price-currency">&euro;</span>
                                </div>
                                <div class="menu__product-description">
                                    <span>{{ product.getDescription() }}</span>
                                </div>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="menu-cart">
            <!-- Cart Delivery Options -->
            <h3 class="menu-cart__headline">Delivery Time</h3>
            <div class="delivery-time">
                <div class="delivery-time__column">
                    <select id="order-delivery-time" class="form-control delivery-time__select">
                        <option selected="selected" value="2015-05-14">Today, May 14</option>
                        <option value="2015-05-15">Tomorrow, May 15</option>
                        <option value="2015-05-16">Friday, May 16</option>
                    </select>
                </div>
                <div class="delivery-time__column">
                    <select id="order-delivery-time" class="form-control delivery-time__select">
                        <option selected="selected" value="17:00">17:00 - 18:00</option>
                        <option value="18:00">18:00 - 19:00</option>
                        <option value="19:00">19:00 - 20:00</option>
                    </select>
                </div>
            </div>
            <!-- Actual Cart -->
            <div class="order">
                <h3 class="menu-cart__headline">My Order</h3>
                <p class="order__empty-message">
                    {{ 'You havenâ€™t added anything to the cart yet! Add items by clicking on a menu item.'|trans }}
                </p>
            </div>

        </div>
    </div>
