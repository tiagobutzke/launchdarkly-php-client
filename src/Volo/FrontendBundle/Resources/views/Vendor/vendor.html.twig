{% extends 'VoloFrontendBundle:Layout:page.html.twig' %}

{% block content %}

    <!-- Please throw the following part in the toilet :) -->
    <style>

        .restaurant__header {
            width: 100%;
            height: 400px;
            background: #DDDDDD;
        }

        .restaurant__categories__nav {
            margin-top: 10px;
            float: left;
            width: 250px;
            min-height: 500px;
        }

        .restaurant__info-box {
            margin: 100px auto;
            width: 600px;
            background: rgba(255, 255, 255, 0.7);
            height: 200px;
        }

        .restaurant__products {
            float: left;
            width: 780px;
            margin: 0 10px;
        }

        .restaurant__cart {
            float: right;
            width: 250px;
            background: #DDD;
            margin-top: 10px;
            min-height: 100px
        }

        .clearfix {
            clear: both;
            width: 100%
        }

        .restaurant__menu__product {
            margin: 0 0;
            display: block;
            padding: 15px;
            border-bottom: 1px solid #BBB;
        }

        .restaurant__menu__product:hover {
            background: #EEE;
            cursor: pointer;
        }

        .restaurant__categories__nav li {
            display: block;
            font-size: 15px;
            font-weight: normal;
        }

        .restaurant__categories__nav li a {
            color: #333333;
        }

        .restaurant__categories__nav li a:hover {
            color: #8a0a40;
            text-decoration: none;
        }

        .restaurant__menu__category__header {
            text-align: center;
            font-weight: bold;
            font-size: 20px;
            padding: 5px;
        }

        .product__description {
            width: 600px;
            clear: both;
            display: block;
            color: #999999;
            font-size: 12px;
        }

        .product__name {
            float: left;
            min-height: 40px;
            width: 550px;
            font-size: 15px;
        }

        .product__price {
            float: left;
            width: 100px;
            color: #D00;
            text-align: right;
            margin-right: 10px;
        }

        .product__add-button {
            float: right;
            width: 30px;
            text-align: center;
            line-height: 30px;
            height: 30px;
            color: #D00;
            font-size: 20px;
            display: none;
        }

        .restaurant__menu__product:hover .product__add-button {
            display: block;
        }

        .restaurant__logo {
            height: 200px;
            width: 150px;
            float: left;
            text-align: center;
            line-height: 200px;
            color: #FFF;
            margin-right: 10px;
            background: #8a0a40;
        }

        .restaurant__header h3 {
            margin: 0;
            font-size: 16px;
        }

        .restaurant__header h1 {
            line-height: 50px;
            padding: 5px;
            margin: 0;
        }

        .restaurant__address {
            float: left;
            width: 320px;
            font-size: 14px;
        }

        .restaurant__phone {
            float: left;
            width: 320px;
            font-size: 14px;
        }

        .restaurant__closing-in {
            margin-top: 10px;
            float: left;
            color: #8a0a40;
            width: 320px;
            font-size: 14px;
        }

        .restaurant__more-button {
            float: right;
            color: #999999;
            font-size: 14px;
            margin-right: 10px;
        }

        .restaurant__opening-hours {
            float: left;
            width: 320px;
            font-size: 14px;
            margin-bottom: 10px;
        }
    </style>
    <!-- and don't forget to flush :D -->

    <header>
        <div class="restaurant__header clearfix">
            <div class="clearfix"></div>
            <div class="restaurant__info-box">
                <img src="path/to/assets/{{ vendor.getLogo() }}" class="restaurant__logo" alt="{{ vendor.getName() }}"/>
                <h1 class="text-center">{{ vendor.getName()|e }}</h1>
                <h3 class="restaurant__cuisines">{{ vendor.cuisines.first.getName() }}</h3>
                <span class="restaurant__closing-in">Closing in 20 minutes</span>
                <span class="restaurant__opening-hours">10:00 - 22:30</span>
                <span class="restaurant__address">{{ vendor.getAddress() }}</span>
                <span class="restaurant__phone">030-12345-Phone-Missing-In-Api</span>
                <a href="#" class="restaurant__more-button">More Info</a>
            </div>
        </div>
    </header>
    <nav class="restaurant__categories__nav">
        <ul>
            {% for menuCategory in vendor.menus.first.getMenuCategories() %}
                <li>
                    <a data-id="{{ menuCategory.getId() }}" href="#restaurant-menu-{{ menuCategory.getId() }}">
                        {{ menuCategory.getName() }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    <div class="restaurant__products">
        {% for menuCategory in vendor.menus.first.getMenuCategories() %}
            <h3 class="restaurant__menu__category__header"
                id="restaurant-menu-{{ menuCategory.getId() }}">{{ menuCategory.getName() }}</h3>
            <div id="restaurant-menu-products-{{ menuCategory.getId() }}" class="restaurant__menu__products">
                <ul>
                    {% for product in menuCategory.getProducts() %}
                        <li class="restaurant__menu__product">
                            <span class="product__name">{{ product.getName() }}</span>
                            <span class="product__price">{{ product.getProductVariations().first().getPrice()|number_format }}</span>
                            <span class="product__price__currency">&euro;</span>
                            <span class="product__add-button">+</span>
                            <span class="product__description">{{ product.getDescription() }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
    <div class="restaurant__cart">
        Cart
    </div>

    <div class="clearfix"></div>
{% endblock %}
