{% extends 'VoloFrontendBundle:Layout:page.html.twig' %}

{% block content_wrapper_class %}menu-bg{% endblock content_wrapper_class %}

{% block content %}
<div class="top-cart">
    <div class="top-cart__info">
        <h3>User Name</h3>
    </div>
    <div class="top-cart__extra-fee">
        Delivery fee added to your final order  <span>5,00 &euro;</span>
    </div>
</div>
<div class="bottom-cart"></div>
<div class="menu-wrapper">
    <div class="menu">
        <div class="menu__main">
            <div class="menu__main__list">
                <div class="menu__categories">
                    <nav>
                        <ul>
                            {% for menuCategory in vendor.menus.first.getMenuCategories() %}
                                <li>
                                    <a data-id="{{ menuCategory.getId() }}" href="#menu__category-id-{{ menuCategory.getId() }}">
                                        {{ menuCategory.getName() }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
                <div class="menu__items">
                    {% for menuCategory in vendor.menus.first.getMenuCategories() %}
                        <h3 class="menu__items__title" id="menu__category-id-{{ menuCategory.getId() }}">{{ menuCategory.getName() }}</h3>
                        {% for product in menuCategory.getProducts() %}
                            <div class="menu__item">
                                <div class="menu__item__name">
                                    {{ product.getName() }}
                                </div>
                                <div class="menu__item__price">
                                    {{ product.getProductVariations().first().getPrice()|number_format }} &euro;
                                    <button class="menu__item__add" data-vendor_id="{{ vendor.id }}" data-object="{{ serialize(product) }}">+</button>
                                </div>
                                <div class="menu__item__description">
                                    {{ product.getDescription() }}
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit Est expedita possimus.
                                </div>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="desktop-cart">
            <!-- Cart Delivery Options -->
            <h3 class="desktop-cart__title">Delivery Time</h3>
            <div class="desktop-cart__time">
                <div class="desktop-cart__time__field">
                    <select id="order-delivery-time">
                        <option selected="selected" value="2015-05-14">Today, May 14</option>
                        <option value="2015-05-15">Tomorrow, May 15</option>
                        <option value="2015-05-16">Friday, May 16</option>
                    </select>
                </div>
                <div class="desktop-cart__time__field">
                    <select id="order-delivery-time2">
                        <option selected="selected" value="17:00">17:00 - 18:00</option>
                        <option value="18:00">18:00 - 19:00</option>
                        <option value="19:00">19:00 - 20:00</option>
                    </select>
                </div>
            </div>
            <!-- Actual Cart -->
            <h3 class="desktop-cart__title">My Order</h3>
            <div class="desktop-cart__order">
                <p class="desktop-cart_order__message">
                    {{ 'You havenâ€™t added anything to the cart yet! Add items by clicking on a menu item.'|trans }}
                </p>

                <div class="desktop-cart__products"></div>

                <div class="desktop-cart__order__subtotal">
                    Subtotal <span class="menu__desktop-cart__order__subtotal-price">0,00 &euro;</span>
                </div>
                <div class="desktop-cart__order__delivery">
                    Delivery <span>0,00 &euro;</span>
                </div>
                <div class="desktop-cart__order__total">
                    Total <span class="menu__desktop-cart__order__total-price">0,00 &euro;</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
