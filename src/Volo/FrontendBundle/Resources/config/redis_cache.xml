<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="volo_frontend.redis.connection.class">Redis</parameter>
    </parameters>
    <services>
        <service id="volo_frontend_redis_connection_service" class="%doctrine_cache.redis.connection.class%">
            <call method="connect">
                <argument>%redis_cache_host%</argument>
                <argument>%redis_cache_port%</argument>
            </call>
        </service>
        <service id="volo_frontend_redis_session_connection_service" class="%volo_frontend.redis.connection.class%">
            <call method="connect">
                <argument>%redis_sessions_host%</argument>
                <argument>%redis_sessions_port%</argument>
                <argument>%redis_sessions_timeout%</argument>
            </call>
            <call method="setOption">
                <argument type="constant">\Redis::OPT_PREFIX</argument>
                <argument>%redis_sessions_prefix%</argument>
            </call>
        </service>
    </services>

</container>
