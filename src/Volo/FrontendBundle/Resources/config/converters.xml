<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="volo_frontend.request.param_converter.user_location_converter.class">Volo\FrontendBundle\Request\ParamConverter\UserLocationConverter</parameter>
        <parameter key="volo_frontend.request.param_converter.city_location_converter.class">Volo\FrontendBundle\Request\ParamConverter\CityLocationConverter</parameter>
    </parameters>

    <services>
        <service id="volo_frontend.request.param_converter.user_location_converter" class="%volo_frontend.request.param_converter.user_location_converter.class%">
            <argument type="service" id="volo_frontend.service.city" />
            <argument type="service" id="translator.default" />
            <tag name="request.param_converter" priority="100" converter="user_location_converter" />
        </service>
        <service id="volo_frontend.request.param_converter.city_location_converter" class="%volo_frontend.request.param_converter.city_location_converter.class%">
            <argument type="service" id="volo_frontend.service.city" />
            <argument type="service" id="translator.default" />
            <tag name="request.param_converter" priority="200" converter="city_location_converter" />
        </service>
    </services>
</container>
