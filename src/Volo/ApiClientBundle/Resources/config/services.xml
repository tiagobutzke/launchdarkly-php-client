<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="guzzle.http_client.class">GuzzleHttp\Client</parameter>
    </parameters>

    <services>
        <service id="volo_api_client.guzzle.client" class="%guzzle.http_client.class%">
            <argument type="collection">
                <argument key="base_url" type="string" id="guzzle.base_url">%foodpanda.api.base_url%</argument>
            </argument>
        </service>

        <service id="volo_api_client.client" class="Volo\ApiClientBundle\Api\Client">
            <argument type="service" id="volo_api_client.guzzle.client" />
        </service>
    </services>
</container>
