<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="guzzle.http_client.class">GuzzleHttp\Client</parameter>
        <parameter key="guzzle.event.emitter.class">GuzzleHttp\Event\Emitter</parameter>
        <parameter key="guzzle.subscriber.log.log_subscriber.class">GuzzleHttp\Subscriber\Log\LogSubscriber</parameter>
        <parameter key="guzzle.subscriber.log.formatter.format" type="constant">GuzzleHttp\Subscriber\Log\Formatter::DEBUG</parameter>
        <parameter key="volo_api_client.api.abstract_api_client.class">Volo\ApiClientBundle\Api\AbstractApiClient</parameter>
        <parameter key="volo_api_client.api.configuration_api_client.class">Volo\ApiClientBundle\Api\ConfigurationApiClient</parameter>
        <parameter key="volo_api_client.api.location_api_client.class">Volo\ApiClientBundle\Api\LocationApiClient</parameter>
        <parameter key="volo_api_client.api.translation_api_client.class">Volo\ApiClientBundle\Api\TranslationApiClient</parameter>
    </parameters>

    <services>
        <service id="volo_api_client.log_subscriber" class="%guzzle.event.emitter.class%">
        </service>

        <service id="guzzle.subscriber.log.log_subscriber" class="%guzzle.subscriber.log.log_subscriber.class%">
            <argument type="service" id="monolog.logger.api" />
            <argument type="string">%guzzle.subscriber.log.formatter.format%</argument>
        </service>

        <service id="volo_api_client.guzzle.event.emitter" class="%guzzle.event.emitter.class%">
            <call method="attach">
                <argument type="service" id="guzzle.subscriber.log.log_subscriber" />
            </call>
        </service>

        <service id="volo_api_client.guzzle.client" class="%guzzle.http_client.class%">
            <argument type="collection">
                <argument key="base_url" type="string">%foodpanda.api.base_url%</argument>
                <argument key="emitter" type="service" id="volo_api_client.guzzle.event.emitter" />
                <argument key="defaults" type="collection">
                    <argument key="headers" type="collection">
                        <argument key="X-FP-API-KEY" type="string">%foodpanda.api.client_id%</argument>
                    </argument>
                </argument>
            </argument>
        </service>

        <service id="volo_api_client.api.abstract_api_client" class="%volo_api_client.api.abstract_api_client.class%" abstract="true">
            <argument id="volo_api_client.guzzle.client" type="service"/>
        </service>

        <service id="volo_api_client.api.configuration_api_client" class="%volo_api_client.api.configuration_api_client.class%" parent="volo_api_client.api.abstract_api_client" />
        <service id="volo_api_client.api.location_api_client" class="%volo_api_client.api.location_api_client.class%" parent="volo_api_client.api.abstract_api_client" />
        <service id="volo_api_client.api.translation_api_client" class="%volo_api_client.api.translation_api_client.class%" parent="volo_api_client.api.abstract_api_client" />

    </services>
</container>
