<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <title>{% block title %}{{ 'general.default_page_title'|trans }}{% endblock %}</title>
        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('img/favicon/apple-touch-icon-57x57.png') }}">
        <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('img/favicon/apple-touch-icon-60x60.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('img/favicon/apple-touch-icon-72x72.png') }}">
        <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('img/favicon/apple-touch-icon-76x76.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('img/favicon/apple-touch-icon-114x114.png') }}">
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('img/favicon/apple-touch-icon-120x120.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('img/favicon/apple-touch-icon-144x144.png') }}">
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('img/favicon/apple-touch-icon-152x152.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('img/favicon/apple-touch-icon-180x180.png') }}">
        <link rel="icon" type="image/png" sizes="196x196" href="{{ asset('img/favicon/android-chrome-192x192.png') }}">
        <meta name="msapplication-config" content="ieconfig.xml" />
        <meta name="msapplication-TileColor" content="#D70F64">
        <meta name="msapplication-TileImage" content="{{ asset('img/favicon/mediumtile.png') }}">

        {% block head_meta_seo %}
            <meta name="robots" content="noindex, follow">
        {% endblock %}

        {% block head_stylesheets %}{% endblock %}
        {% block head_scripts %}{% endblock %}
    </head>
    <body class="country-{{ country_code }} {% block body_class %}{% endblock %}">
        {% if google_tag_manager_container_id %}
            <!-- Google Tag Manager -->
            {% block google_tag_manager %}{% endblock %}
            <script type="text/javascript">
                (function(w,d,s,l,i){
                    var existingScript = d.getElementById('google-tag-manager-script');
                    if (existingScript !== null) {
                        existingScript.remove();
                    }
                    w[l]=w[l]||[];
                    w[l].push({'gtm.start': new Date().getTime(),event:'gtm.js'});
                    var f=d.getElementsByTagName(s)[0],
                            j=d.createElement(s),
                            dl=l!='dataLayer'?'&l='+l:'';
                    j.async=true;
                    j.src='//www.googletagmanager.com/gtm.js?id='+i+dl;
                    j.id='google-tag-manager-script';
                    f.parentNode.insertBefore(j,f);
                })(window,document,'script','dataLayer','{{ google_tag_manager_container_id }}');
            </script>
            <noscript><iframe src="//www.googletagmanager.com/ns.html?id={{ google_tag_manager_container_id }}" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
            <!-- End Google Tag Manager -->
        {% endif %}
        {% block modals %}{% endblock %}
        <div class="page-wrapper {% block page_wrapper_class %}{% endblock %}">
            <div class="content-wrapper {% block content_wrapper_class %}{% endblock %}">
                {% block header %}{% endblock %}
                {% block breadcrumbs %}{% endblock %}
                {% block flash_messages %}{% endblock %}
            <main>
                {% block content %}{% endblock %}
            </main>
            </div>
            <footer class="footer {% block footer_size_class %}footer-full{% endblock %}">
                {% block footer %}{% endblock %}
            </footer>
        </div>
        {% block footer_scripts %}{% endblock %}
    </body>
</html>
